#include<stdio.h>
#include<string.h>
 int main()
 {
  char a[100] ,temp;

   printf("Enter the string to reverese :");
   scanf(" %s",a);
     int i=0;
  int j=strlen(a)-1;
  while(i<j)
  { 
    temp = a[i];
    a[i] = a[j];
    a[j] = temp;
    i++;
    j--;
  }
  printf("The reverse of a string is %s ",a);
 }
 
